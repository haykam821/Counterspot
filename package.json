{
	"name": "counterspot",
	"description": "A simple counting bot for Discord.",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"scripts": {
		"build": "tsc",
		"dev": "ts-node-dev --respawn ./src/index.ts",
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "node ./dist/index.js",
		"lint": "eslint \"./**/*.ts\" --ignore-path .gitignore"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/haykam821/Counterspot.git"
	},
	"keywords": [
		"counting",
		"discord",
		"bot"
	],
	"author": "haykam821",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/haykam821/Counterspot/issues"
	},
	"homepage": "https://github.com/haykam821/Counterspot#readme",
	"dependencies": {
		"cosmiconfig": "^7.0.0",
		"debug": "^4.1.1",
		"discord.js": "^13.1.0",
		"fs-extra": "^9.0.1",
		"merge-deep": "^3.0.2"
	},
	"devDependencies": {
		"@types/debug": "^4.1.5",
		"@types/fs-extra": "^9.0.8",
		"@types/merge-deep": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"eslint": "^8.10.0",
		"eslint-config-haykam": "^1.16.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.0.2"
	},
	"eslintConfig": {
		"extends": [
			"eslint-config-haykam",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"plugins": [
			"@typescript-eslint"
		],
		"rules": {
			"semi": "off",
			"@typescript-eslint/semi": "error",
			"no-shadow": "off",
			"@typescript-eslint/no-shadow": "error",
			"sort-imports": "error",
			"jsdoc/require-param-type": "off"
		}
	}
}
